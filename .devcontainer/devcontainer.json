{
  "name": "Full Stack Dev Container",
  "dockerComposeFile": "../shared/docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/app",
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind,consistency=cached"
  ],
  "runArgs": ["--user", "root"],
  "postCreateCommand": "bash -c 'ls -la /app && if [ -d /root/.ssh ]; then chmod 700 /root/.ssh && chmod 600 /root/.ssh/config 2>/dev/null || true && chmod 600 /root/.ssh/id_ed25519 2>/dev/null || true && chmod 600 /root/.ssh/id_ed25519_octa 2>/dev/null || true && chmod 644 /root/.ssh/id_ed25519.pub 2>/dev/null || true && chmod 644 /root/.ssh/id_ed25519_octa.pub 2>/dev/null || true && chmod 644 /root/.ssh/known_hosts 2>/dev/null || true; fi'",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22",
      "nodeGypDependencies": true,
      "installYarnUsingApt": false,
      "installYarnUsingCorepack": false,
      "installPnpmUsingApt": false,
      "installPnpmUsingCorepack": true
    }
  },
  "forwardPorts": [3000, 5173, 6379, 6380, 8025],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "typescript.preferences.includePackageJsonAutoImports": "on",
        "typescript.suggest.autoImports": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        }
      },
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode-remote.remote-containers",
        "eamodio.gitlens"
      ]
    }
  },
  "shutdownAction": "stopCompose",
  "remoteUser": "root"
}
