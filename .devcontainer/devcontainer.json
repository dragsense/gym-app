{
  "name": "Full Stack Dev Container",
  "dockerComposeFile": "../shared/docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/app",
  "runArgs": ["--user", "root", "--env", "SSH_AUTH_SOCK=/ssh-agent"],
  "remoteUser": "root",
  "mounts": ["${localEnv:SSH_AUTH_SOCK}:/ssh-agent:ro"],
  "postCreateCommand": "chmod 600 /ssh-agent && chown root:root /ssh-agent",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22",
      "nodeGypDependencies": true,
      "installYarnUsingApt": false,
      "installYarnUsingCorepack": false,
      "installPnpmUsingApt": false,
      "installPnpmUsingCorepack": true
    }
  },
  "forwardPorts": [3000, 5173, 6379, 6380, 8025],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "typescript.preferences.includePackageJsonAutoImports": "on",
        "typescript.suggest.autoImports": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        }
      },
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode-remote.remote-containers",
        "eamodio.gitlens"
      ]
    }
  },
  "shutdownAction": "stopCompose"
}
