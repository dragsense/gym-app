{
  "name": "Full Stack Dev Container",
  "dockerComposeFile": "../shared/docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/app",
  "remoteUser": "root",

  // ðŸ‘‡ SSH forwarding setup
  "runArgs": [
    "--user", "root"
  ],
  "postCreateCommand": "mkdir -p /root/.ssh && echo 'Host github.com\n  HostName github.com\n  User git\n  IdentityFile /root/.ssh/id_ed25519_github\n  IdentitiesOnly yes' > /root/.ssh/config && chmod 600 /root/.ssh/config",
  // Node + Git features
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22",
      "nodeGypDependencies": true
    }
  },

  "forwardPorts": [3000, 5173, 6379, 6380, 8025],

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        }
      },
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "ms-vscode-remote.remote-containers"
      ]
    }
  },

  "shutdownAction": "stopCompose"
}
