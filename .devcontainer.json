{
    "name": "Dev Container",
    "dockerComposeFile": "shared/docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/app",
    "remoteUser": "root",
    "shutdownAction": "stopCompose",
    "forwardPorts": [
        3000,
        5173,
        6379,
        6380,
        8025
    ],
    "postCreateCommand": "mkdir -p /root/.ssh && cat > /root/.ssh/config <<'EOF'\nHost github.com\n  HostName github.com\n  User git\n  ForwardAgent yes\nEOF\nchmod 600 /root/.ssh/config",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.fixAll.eslint": "explicit"
                }
            },
            "extensions": [
                "ms-vscode.vscode-typescript-next",
                "bradlc.vscode-tailwindcss",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "eamodio.gitlens",
                "ms-vscode-remote.remote-containers"
            ]
        }
    }
}