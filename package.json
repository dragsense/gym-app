{
    "name": "full-stack-template",
    "version": "1.0.0",
    "description": "Full-stack template with NestJS backend and React frontend",
    "private": true,
    "scripts": {
      "dev": "cd shared && docker-compose up -d",
      "dev:backend": "cd shared && docker-compose -f docker-compose.backend.yml up -d",
      "dev:frontend": "cd shared && docker-compose -f docker-compose.frontend.yml up -d",
      "stop": "cd shared && docker-compose down",
      "stop:backend": "cd shared && docker-compose -f docker-compose.backend.yml down",
      "stop:frontend": "cd shared && docker-compose -f docker-compose.frontend.yml down",
      "restart": "cd shared && docker-compose restart",
      "build": "cd shared && docker-compose build",
      "build:backend": "cd shared && docker-compose -f docker-compose.backend.yml build",
      "build:frontend": "cd shared && docker-compose -f docker-compose.frontend.yml build",
      "logs": "cd shared && docker-compose logs -f",
      "logs:backend": "cd shared && docker-compose -f docker-compose.backend.yml logs -f",
      "logs:frontend": "cd shared && docker-compose -f docker-compose.frontend.yml logs -f",
      "clean": "cd shared && docker-compose down -v",
      "prod:backend": "cd shared && docker-compose -f docker-compose.backend.prod.yml up -d",
      "prod:frontend": "cd shared && docker-compose -f docker-compose.frontend.prod.yml up -d",
      "prod:frontend:nginx": "cd shared && docker-compose -f docker-compose.frontend.nginx.yml up -d",
      "setup": "npm run clean && npm run build && npm run dev",
      "setup:backend": "npm run clean && npm run build:backend && npm run dev:backend",
      "setup:frontend": "npm run clean && npm run build:frontend && npm run dev:frontend"
    },
    "devDependencies": {
      "concurrently": "^8.2.2"
    },
    "keywords": [
      "nestjs",
      "react",
      "typescript",
      "docker",
      "fullstack"
    ],
    "author": "",
    "license": "UNLICENSED"
  }