{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "preserveWatchOutput": true
  },
  "watchIgnore": ["**/client/**"],
  "watchOptions": {
    "usePolling": true,
    "interval": 1000
  }
}
